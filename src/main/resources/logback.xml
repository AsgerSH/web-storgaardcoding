<configuration debug="false">
    <!-- Write to /tmp by default (works in your current Dockerfile).
         Override with -DLOG_DIR=/app/logs locally if you want. -->
    <property name="LOG_DIR" value="${LOG_DIR:-/tmp}" />
    <property name="APP_LOG" value="${LOG_DIR}/javalin-app.log" />
    <property name="DEBUG_LOG" value="${LOG_DIR}/debug.log" />

    <!-- Console (best for containers) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%highlight(%-5level) %cyan(%logger{15}) - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- App file -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>${APP_LOG}</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Debug file -->
    <appender name="DEBUGFILE" class="ch.qos.logback.core.FileAppender">
        <file>${DEBUG_LOG}</file>
        <append>false</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Tame noisy libs -->
    <logger name="org.hibernate" level="WARN" />
    <logger name="org.eclipse.jetty" level="WARN" />
    <logger name="io.javalin" level="INFO" />
    <logger name="com.zaxxer.hikari" level="WARN" />

    <!-- Your app package -->
    <logger name="com.marcuspff" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="DEBUGFILE"/>
    </logger>

    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>